  <license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
  <version>4.0.0</version>
  <description>Displays a Paypal Donate button on your site.</description>

	<files>		
		<filename plugin="bfpaypaldonate">bfpaypaldonate.php</filename>		
		<filename>index.html</filename>
	</files>

	<languages>
		<language tag="en-GB">en-GB.plg_content_bfpaypaldonate.ini</language>
		<language tag="en-GB">en-GB.plg_content_bfpaypaldonate.sys.ini</language>
	</languages>

  <config>
    <fields name="params">
    <fieldset name="basic">
      <field name="accountinfo" type="textarea" rows="10" cols="30"
             default=""
        label="PLG_BFPAYPALDONATE_ENCACCINFO_LABEL"
        description="PLG_BFPAYPALDONATE_ENCACCINFO_DESC" />
    </fieldset>
    </fields>
  </config>

  <updateservers>
      <server type="extension" priority="1" name="Content - Paypal Donate Button by BrainforgeUK">https://brainforge.co.uk/media/com_bfupdater/plg__content_bfpaypaldonate.xml</server>
  </updateservers>
